{
  "name": "goa-design-system-mcp",
  "version": "1.0.0",
  "description": "MCP Server for GoA Design System component context - helps teams build government services with AI assistance",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "test": "node build/index.js --test",
    "sync": "node scripts/sync-examples.js",
    "map-components": "node scripts/map-examples-to-components.js",
    "update-components": "node scripts/update-component-files.js",
    "test-examples": "node scripts/test-example-queries.js",
    "full-sync": "./scripts/full-sync.sh"
  },
  "keywords": [
    "mcp",
    "design-system",
    "goa",
    "government-of-alberta",
    "components",
    "ai-assistant"
  ],
  "author": "GoA Design System Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GovAlta/goa-design-system-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "bin": {
    "goa-design-system-mcp": "build/index.js"
  }
}
